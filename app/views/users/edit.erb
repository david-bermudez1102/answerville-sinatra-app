<div class="col-md-5">
  <% if flash[:error] %>
  <div class="alert alert-danger" >
    <%=flash[:error]%>
  </div>
  <% end %>
  <div class="card bg-transparent border-0">
    <div class="card-header text-light border-0" style="background-color: rgba(0,0,0,0.1);">
      <div class="row">
        <div class="col text-center">
          <h1 class="card-title display-4">
            <i class="fa fa-edit" aria-hidden="true"></i>
            Edit information
          </h1>
        </div>
      </div>
    </div>
    <div class="card-body bg-transparent text-light px-0">
      <form action="/users/<%=current_user.username%>" method="POST">
        <input type="hidden" id="hidden" name="_method" value="patch">
        <div class="form-group list-group-item border-0 px-5" style="background-color: rgba(0,0,0,0.1);">
          <label class="form-label display-4" style="font-size:22px;" for="name">Name</label>
          <input class="form-control form-control-lg" type="text" name="user[name]" id="name" value="<%=current_user.name%>">
        </div>
        <div class="form-group list-group-item border-0 px-5" style="background-color: rgba(0,0,0,0.1);">
          <label class="form-label display-4" style="font-size:22px;" for="username">Username</label>
          <input class="form-control form-control-lg" type="text" name="user[username]" id="username" value="<%=current_user.username%>">
        </div>
        <div class="form-group list-group-item border-0 px-5" style="background-color: rgba(0,0,0,0.1);">
          <label class="form-label display-4" style="font-size:22px;" for="email">Email</label>
          <input class="form-control form-control-lg" type="text" name="user[email]" id="email" value="<%=current_user.email%>">
        </div>
        <div class="form-group list-group-item border-0 px-5" style="background-color: rgba(0,0,0,0.1);">
          <label class="form-label display-4" style="font-size:22px;" for="new_password">New Password</label>
          <input class="form-control form-control-lg" type="password" name="new_password" id="new_password" placeholder="Enter a new password">
        </div>
        <div class="form-group list-group-item border-0 px-5" style="background-color: rgba(0,0,0,0.1);">
          <label class="form-label display-4" style="font-size:22px;" for="password">Password</label>
          <input class="form-control form-control-lg" type="password" name="user[password]" id="password" placeholder="Enter your current password to save the changes">
        </div>
        <div class="form-group list-group-item border-0 text-center" style="background-color: rgba(0,0,0,0.1);">
          <input class="btn btn-lg send-btn" style="color:#fff;border:2px solid #fff;" type="submit" value="Edit information">
        </div>
        <div class="form-group list-group-item border-0 text-center" style="background-color: rgba(0,0,0,0.1);">
          <small>You'll be logout once you change any of your information</small>
        </div>
      </form>
    </div>
  </div>
</div>
