<div class="col-md-5">
  <% if flash[:error] %>
  <div class="alert alert-danger">
    <%=flash[:error]%>
  </div>
  <% end %>
  <div class="card bg-transparent">
    <div class="card-header text-light" style="background-color: rgba(0,0,0,0.1);">
      <div class="row">
        <div class="col text-center">
          <h1 class="card-title display-4">
            <i class="fa fa-edit" aria-hidden="true"></i>
            Edit answer
          </h1>
        </div>
      </div>
    </div>
    <div class="card-body" style="background-color: rgba(0,0,0,0.1);">
      <h3 class="text-light display-4" style="font-size:30px;">The Question</h3>
      <ul class="list-group text-secondary">
        <li class="list-group-item bg-light">
          <%=@answer.question.content%>
        </li>
      </ul>
    </div>
    <div class="card-footer" style="background-color: rgba(0,0,0,0.1);">
      <h3 class="text-light display-4" style="font-size:30px;">Your answer</h3>
      <ul class="list-group text-secondary">
        <li class="list-group-item bg-light">
          <form action="/answers/<%=@answer.id%>" method="POST">
            <input type="hidden" id="hidden" name="_method" value="patch">
            <div class="form-group">
              <textarea class="form-control form-control-lg text-secondary" rows="4" name="answer[content]" id="content"><%=@answer.content%></textarea>
            </div>
            <div class="form-group row align-items-center">
              <div class="col">
                <input class="btn btn-lg send-btn" type="submit" value="Edit answer">
              </div>
              <div class="col text-right">
                <a href="/questions/<%=@answer.question.id%>" class="btn p-0" style="font-size:40px;" title="Go back to question"><i class="fa fa-chevron-circle-left" aria-hidden="true"></i></a>
              </div>
            </div>
          </form>
        </li>
      </ul>
    </div>
  </div>
</div>
